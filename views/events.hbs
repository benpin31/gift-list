<div class="create_list_form">
<div id="user-lists">
    <div class="create_list_form">
    <div class="page_title">My events</div>
    {{#each events}} 
    <div class="list-container">
        <a href="/events/{{this._id}}">{{this.name}}</a>
        <div id="event-crud">
            <a href="/events/update/{{this._id}}"><i class="fas fa-edit" style="color:blue"></i></a>
            <a href="/events/delete/{{this._id}}"><i class="fas fa-trash-alt red"></i></a>
        </div>
    </div>
    {{/each}}
    
        <a class="create_gift" class="btn_all_width" href="/events/create">Create a new event</a>

</div>
</div>