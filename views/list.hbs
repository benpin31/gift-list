<div class="list">
    {{> list list}}
    <form action="/lists/addGift/{{list._id}}" method="post">
        {{#if gifts}}
        <label for="list-add-gifts">Select to add the gift to the list</label>
        <select name="gifts" id="list-add-gifts" multiple>
        {{#each gifts}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
        </select>
        <button  class="btn">Add a gift</button>
        {{/if}}
    </form>
    {{#unless gifts}}
    <div class="flex">
        <img style="width=100%" src="/img/create_gift.png" alt="">
        <p>Oh, you have no gifts, please create a new gift!  </p>
        <a class="btn_all_width" href="/gifts/create/{{list._id}}">Create a gift</a>
    </div>
    {{/unless}}
    <form action="/lists/addToUser/{{list._id}}" method="post" class="invite_user">
        <label for="list-add-to-user">Invite a collaborator to the list via Email</label>
        <input type="email" name="email" id="list-add-to-user" placeholder="Enter colaborator's email">
        <button class="btn">Invite</button>
    </form>
    <div class="flex">
        {{#if gifts}}
    <a class="create_gift" href="/gifts/create/{{list._id}}">Create a gift</a>   
    {{/if}}
    <a class="delete_list" href="/lists/delete/{{list._id}}">Delete the list</a>
    </div>
</div>