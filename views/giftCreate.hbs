<section class="create_list_form">
<div class="page_title">Create a gift</div>
<form action="/gifts/create/{{listId}}" method="post" class="createGift" enctype="multipart/form-data">

<label for="name">Name</label>
<input class="input" type="text" id="name" name="name" required>

<label for="brand">Brand</label>
<input class="input" type="text" id="brand" name="brand">

<label for="picture">Image of the gift</label>
<input class="input" type="file" id="picture" name="picture"> 

<label for="url">Url</label>
<input class="input" type="text" id="url" name="urls">

<label for="description">Description or comment</label>
<textarea name="description" id="description" cols="54" rows="5"></textarea>

<label for="price">Price</label>
<input class="input" type="number" id="price" name="price">

