<div class="container">
<div class="page_title">Your profile</div>
    <div class="create_list_form">

    <form action="/profile" method="post">

    <label for="firstname">Firstname</label>
    <input class="input" type="text" id="firstname" name="name" value={{name}}>

    <label for="lastName">Lastname</label>
    <input class="input" type="text" id="lastName" name="lastName" value={{lastName}}>

    <label for="email">Email</label>
    <input class="input" type="email" id="email" name="email" value={{email}} readonly>

    <button class="btn_all_width">Validate changes</button>
    </form>
    <a href="/profile/delete"><button class="delete_item">Delete profile</button></a>
</div>  
</div>